{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2016",                                 
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,                               
    "esModuleInterop": true,                            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
